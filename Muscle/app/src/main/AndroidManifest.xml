<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="g11.muscle">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Bluetooth Permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Muscle">
        <!--android:theme="@style/Theme.AppCompat" was added for hot fix, feel free to change it-->
        <activity android:name=".ExerciseActivity"  android:theme="@style/Theme.AppCompat"/>
        <activity android:name=".ResetPassActivity" android:theme="@style/Theme.AppCompat"/>
        <activity android:name=".PickExerciseActivity" android:theme="@style/Theme.AppCompat"/>
        <activity android:name=".groupExercisesActivity" android:theme="@style/Theme.AppCompat"/>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" android:theme="@style/Theme.AppCompat"/>
        <activity android:name=".FeedBack" android:theme="@style/Theme.AppCompat" android:label="@string/app_name" />
        <activity android:name=".FormActivity" android:theme="@style/Theme.AppCompat" android:label="Settings" />
    </application>

</manifest>