<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/PE_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/plan_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_avatar"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/plan_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/plan_image"
            android:text="Exercise_name"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/plan_sets_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/plan_exercise"
            android:layout_toRightOf="@+id/plan_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plan_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:text="3" />

            <TextView
                android:id="@+id/sets_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:text="Sets"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/plan_Reps_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/plan_exercise"
            android:layout_toRightOf="@+id/plan_sets_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plan_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:text="10" />

            <TextView
                android:id="@+id/reps_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:text="Reps"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/plan_rest_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plan_exercise"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/plan_Reps_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plan_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:text="00:01:00" />

            <TextView
                android:id="@+id/rest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:text="Rest"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/plan_weight_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plan_exercise"
            android:layout_toRightOf="@+id/plan_rest_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plan_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:text="30" />

            <TextView
                android:id="@+id/weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:text="Weight (Kg)"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>