<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/PE_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:id="@+id/plan_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:text="Exercise_name"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/check"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/check"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:id="@+id/plan_sets_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plan_exercise"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/plan_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plan_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/sets_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sets"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/plan_Reps_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plan_exercise"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/plan_sets_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plan_reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/reps_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Reps"
                android:textSize="11sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/plan_rest_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plan_exercise"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/plan_Reps_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plan_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="00:01:00"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/rest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rest"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/plan_weight_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plan_exercise"
            android:layout_toRightOf="@+id/plan_rest_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plan_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="30"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Weight (Kg)"
                android:textSize="11sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>