<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/sign_up_button"
        android:onClick="onClickNext"
        android:text="@string/sign_up_btn_text"
        android:layout_width="393dp"
        android:layout_height="49dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/password_confirmation_layout" />

    <!--email textbox-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_input_layout"
        app:errorEnabled="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/email_input"
            android:hint="@string/email_hint"

            android:text="ola@ua.pt"

            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:ems="10"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.design.widget.TextInputLayout>

    <!--password  textbox-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/email_input_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password_input"
            android:hint="@string/password_hint"

            android:text="123456"

            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:ems="10"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.design.widget.TextInputLayout>
    <!--tools:layout_editor_absoluteY="125dp" -->

    <!--password confirmation textbox-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_confirmation_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/password_input_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password_confirmation"
            android:hint="@string/password_confirmation_hint"

            android:text="123456"

            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:ems="10"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:imeOptions="actionDone" />

    </android.support.design.widget.TextInputLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="106dp"
        android:layout_height="113dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:indeterminate="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.534" />


</android.support.constraint.ConstraintLayout>
